@page
@model Catalogs.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Catalog[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Catalog[0].SheetIndex)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Catalog[0].PriceColumn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Catalog[0].SizeColumn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Catalog[0].ReferenceColumn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Catalog[0].EanColumn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Catalog[0].DimensionColumn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Catalog[0].Info1Column)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Catalog[0].Info2Column)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Catalog[0].Info3Column)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Catalog[0].Info4Column)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Catalog[0].Info5Column)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Catalog[0].StartLineNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Catalog[0].DiscountPercentage)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Catalog[0].SizeFormat)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Catalog) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>

            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
