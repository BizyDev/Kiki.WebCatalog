@page
@model IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Catalog[0].Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Catalog[0].SheetIndex)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Catalog[0].StartLineNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Catalog[0].DiscountPercentage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Catalog[0].SizeFormat)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Catalog)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SheetIndex)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartLineNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiscountPercentage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SizeFormat)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
