@model Products.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Pneus</h2>

@*<p>
        <a asp-page="Create">Create New</a>
    </p>*@

<form>
    <p>
        Rechercher: <input type="text" name="SearchString">
        <input type="submit" value="Go !" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].BasePrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].FinalPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Dimension)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Reference)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].EAN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Info1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Info2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Info3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Info4)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Info5)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Catalog)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Product)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.BasePrice
                </td>
                <td>
                    @item.FinalPrice
                </td>
                <td>
                    @item.Size
                </td>
                <td>
                    @item.Dimension
                </td>
                <td>
                    @item.Reference
                </td>
                <td>
                    @item.EAN
                </td>
                <td>
                    @item.Info1
                </td>
                <td>
                    @item.Info2
                </td>
                <td>
                    @item.Info3
                </td>
                <td>
                    @item.Info4
                </td>
                <td>
                    @item.Info5
                </td>
            </tr>
        }
    </tbody>
</table>
