@page
@using Kiki.WebApp.Pages.RulesBatch

@model CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Discount Rules Batch Import</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="DeletePrevious" class="control-label"></label>
                <input asp-for="DeletePrevious" type="checkbox" class="form-control" style="height: auto" />
                <span asp-validation-for="DeletePrevious" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="file" class="form-control" id="rulesFileId" name="rulesFile" style="height: auto" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
